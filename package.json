{
  "name": "medlab-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "MedLab Desktop Application",
  "author": "",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron electron/main.cjs",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",
    "prepare:backend": "cd backend && npm ci && npm run build && npx prisma generate && npx prisma db push",
    "electron:build": "npm run prepare:backend && npm run build && electron-builder",
    "electron:build:dir": "npm run prepare:backend && npm run build && electron-builder --dir",
    "build:portable": "build-portable.bat",
    "build:simple": "build-simple.bat"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.medlab.desktop",
    "productName": "MedLab",
    "directories": {
      "output": "dist-electron-new"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/dist/**/*",
      "backend/node_modules/**/*",
      "backend/package.json",
      "backend/prisma/schema.prisma",
      "backend/data/**/*",
      "backend/database.url",
      "backend/.env.sqlite",
      "!backend/*.log",
      "!backend/.env.development",
      "!backend/.env.local", 
      "!backend/.env",
      "!electron/*.md"
    ],
    "asarUnpack": [
      "backend/**/*",
      "backend/node_modules/@prisma/engines/**/*",
      "backend/node_modules/@prisma/client/**/*",
      "backend/dist/**/*"
    ],
    "asar": false,
    "icon": "electron/icon.ico",
    "win": {
      "target": "nsis",
      "icon": "electron/icon.ico",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "electron/icon.ico",
      "uninstallerIcon": "electron/icon.ico",
      "shortcutName": "MedLab"
    }
  }
}
