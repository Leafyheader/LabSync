generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  role      String   @default("STAFF")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
  @@index([createdAt])
  @@map("users")
}

model LabTest {
  id            String            @id @default(cuid())
  name          String
  price         Decimal
  category      String
  description   String?
  isActive      Boolean           @default(true)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  selectedTests TransactionTest[]

  @@index([category])
  @@index([isActive])
  @@index([name])
  @@index([createdAt])
  @@map("lab_tests")
}

model Customer {
  id           String        @id @default(cuid())
  name         String
  phone        String?
  email        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@index([name])
  @@index([phone])
  @@index([email])
  @@index([createdAt])
  @@map("customers")
}

model Transaction {
  id              String            @id @default(cuid())
  referenceNumber String            @unique
  totalCost       Decimal
  paymentMethod   String
  status          String            @default("PENDING")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  customerId      String
  selectedTests   TransactionTest[]
  customer        Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([paymentMethod])
  @@index([createdAt])
  @@index([updatedAt])
  @@index([customerId, createdAt])
  @@index([status, createdAt])
  @@map("transactions")
}

model TransactionTest {
  id            String      @id @default(cuid())
  quantity      Int         @default(1)
  transactionId String
  labTestId     String
  labTest       LabTest     @relation(fields: [labTestId], references: [id], onDelete: Cascade)
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@unique([transactionId, labTestId])
  @@index([transactionId])
  @@index([labTestId])
  @@map("transaction_tests")
}

model Activation {
  id         String    @id @default(cuid())
  code       String    @unique
  status     String    @default("OFF")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  activateAt DateTime?

  @@index([status])
  @@index([activateAt])
  @@map("activations")
}
